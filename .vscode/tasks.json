{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "packer fmt",
            "type": "shell",
            "command": "packer fmt VS2022Box && packer fmt VSCodeBox",
            "options": {
                "cwd": "${workspaceFolder}/images"
            },
            "presentation": {
                "showReuseMessage": false,
                "close": true
            },
            "icon": {
                "id": "wrench",
                "color": "terminal.ansiBlue"
            },
            "problemMatcher": []
        },
        {
            "label": "create venv",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "venv",
                ".venv"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "showReuseMessage": false,
            },
            "icon": {
                "id": "new-folder",
                "color": "terminal.ansiBlue"
            },
            "problemMatcher": []
        },
        {
            "label": "delete venv",
            "type": "shell",
            "command": "rm",
            "args": [
                "-r",
                ".venv"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "showReuseMessage": false,
            },
            "icon": {
                "id": "trash",
                "color": "terminal.ansiRed"
            },
            "problemMatcher": []
        },
        {
            "label": "docker: build",
            "type": "docker-build",
            "dockerBuild": {
                "context": "${workspaceFolder}/builder",
                "dockerfile": "${workspaceFolder}/builder/Dockerfile",
                "tag": "ghcr.io/${input:imageRepository}/builder:${input:imageTagVersion}",
                "customOptions": "-t \"ghcr.io/${input:imageRepository}/builder:latest\"",
                "buildArgs": {
                    "IMAGE_VERSION": "${input:imageTagVersion}"
                },
                "labels": {
                    "includeDefaults": false
                }
            },
            "icon": {
                "id": "tools",
                "color": "terminal.ansiBlue"
            }
        },
        {
            "label": "docker: push",
            "command": "docker",
            "args": [
                "push",
                "ghcr.io/${input:imageRepository}/builder:${input:imageTagVersion}"
            ],
            "dependsOn": [],
            "icon": {
                "id": "rocket",
                "color": "terminal.ansiBlue"
            },
        },
        {
            "label": "docker: push (latest)",
            "command": "docker",
            "args": [
                "push",
                "ghcr.io/${input:imageRepository}/builder:latest"
            ],
            "dependsOn": [
                "docker: push"
            ],
            "problemMatcher": [],
            "icon": {
                "id": "rocket",
                "color": "terminal.ansiBlue"
            },
        },
        {
            "label": "docker: build push (latest)",
            "type": "shell",
            "command": "echo done.",
            "dependsOrder": "sequence",
            "dependsOn": [
                "docker: build",
                "docker: push (latest)"
            ],
            "problemMatcher": [],
            "icon": {
                "id": "rocket",
                "color": "terminal.ansiBlue"
            },
        },
    ],
    "inputs": [
        {
            "id": "imageRepository",
            "type": "pickString",
            "description": "Repository name to push the image.",
            "default": "azure/dev-box-images",
            "options": [
                "azure/dev-box-images",
                "colbylwilliams/devbox-images"
            ]
        },
        {
            "id": "imageTagVersion",
            "type": "promptString",
            "description": "Version for this tag (also builds a latest version).",
            "default": "0.1.0"
        },
    ]
}